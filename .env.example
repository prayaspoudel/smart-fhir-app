# SMART on FHIR App Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# SMART ON FHIR CONFIGURATION
# =============================================================================

# OAuth2 Client ID registered with the FHIR server
SMART_CLIENT_ID=your_client_id_here

# OAuth2 Redirect URI (must match registered value)
SMART_REDIRECT_URI=smartfhirapp://callback

# Default FHIR server URL (can be overridden by user in app)
DEFAULT_FHIR_SERVER_URL=https://launch.smarthealthit.org/v/r4/fhir

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================

# Backend server URL for auth, registration, and provider management
BACKEND_BASE_URL=http://localhost:3001/api

# WebSocket server URL for real-time updates
WEBSOCKET_URL=ws://localhost:3001

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Session timeout in minutes (default: 15)
SESSION_TIMEOUT_MINUTES=15

# Idle timeout warning in minutes before logout (default: 2)
IDLE_WARNING_MINUTES=2

# Enable biometric authentication (true/false)
BIOMETRIC_AUTH_ENABLED=true

# Maximum failed login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Lockout duration in minutes after max failed attempts
LOCKOUT_DURATION_MINUTES=15

# =============================================================================
# ENCRYPTION CONFIGURATION
# =============================================================================

# Key derivation iterations (higher = more secure but slower)
KEY_DERIVATION_ITERATIONS=100000

# Encrypted data TTL in hours (0 = no expiry)
ENCRYPTED_DATA_TTL_HOURS=24

# =============================================================================
# PUSH NOTIFICATIONS
# =============================================================================

# FCM (Firebase Cloud Messaging) configuration
FCM_SENDER_ID=your_fcm_sender_id

# =============================================================================
# LOGGING & ANALYTICS
# =============================================================================

# Disable analytics collection (true/false)
ANALYTICS_DISABLED=true

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable PHI redaction in logs (should always be true in production)
PHI_REDACTION_ENABLED=true

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Enable debug mode (false in production)
DEBUG_MODE=false

# Mock FHIR server for development
MOCK_FHIR_ENABLED=false
